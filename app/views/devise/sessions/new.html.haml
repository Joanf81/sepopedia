= devise_error_messages!
.title
  %h2= t('views.devise.login.new.title')
.container
  .row
    .col-sm-3.col-md-4.col-md-offset-4
    .col-sm-6.col-md-4.col-md-offset-4
      .account-wall
        #my-tab-content.tab-content
          #login.tab-pane.active
            %img.profile-img{:alt => "", :src => "https://lh5.googleusercontent.com/-b0lyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"}/
            = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-user-session form-signin"}) do |f|
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('views.devise.login.new.email_placeholder'), class: "form-control"
              = f.password_field :password, autocomplete: "off", placeholder: t('views.devise.login.new.password_placeholder'), class: "form-control"
              = f.button :submit, value: t('views.devise.login.new.login_button'), class: "btn btn-lg btn-outline-primary btn-block" 
            #tabs
              %p.text-center
                = link_to t('views.devise.login.new.still_without_account'), new_user_registration_path
              %p.text-center
                = link_to t('views.devise.login.new.password_forgoten'), new_user_password_path
    .col-sm-3.col-md-4.col-md-offset-4