= devise_error_messages!
.title
  %h2
    Restablecer contraseña
.container
  .row
    .col-sm-3.col-md-4.col-md-offset-4
    .col-sm-6.col-md-4.col-md-offset-4
      .account-wall
        #my-tab-content.tab-content
          #login.tab-pane.active
            %img.profile-img{:alt => "", :src => "https://lh5.googleusercontent.com/-b0lyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"}/
            %p= "A continuación puedes establecer una nueva contraseña para tu cuenta de usuario."
            = simple_form_for(resource, as: resource_name, url: password_path(resource_name), method: :put, html: {class: "form-user-session"}) do |f|
              = f.hidden_field :reset_password_token
              = f.password_field :password, placeholder: "Nueva contraseña", autofocus: true, autocomplete: "off", class: "form-control"
              = f.password_field :password_confirmation, placeholder: "Repite contraseña", autocomplete: "off", class: "form-control"

              = f.button :submit, value: "Restablecer contraseña", class: "btn btn-lg btn-outline-primary btn-block" 
            #tabs
    .col-sm-3.col-md-4.col-md-offset-4
