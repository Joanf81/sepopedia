= devise_error_messages!
.title
  %h2= t('views.devise.passwords.edit.title')
    
.container
  .row
    .col-sm-3.col-md-4.col-md-offset-4
    .col-sm-6.col-md-4.col-md-offset-4
      .account-wall
        #my-tab-content.tab-content
          #login.tab-pane.active
            %img.profile-img{:alt => "", :src => "https://lh5.googleusercontent.com/-b0lyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"}/
            %p= t('views.devise.passwords.edit.description')
            = simple_form_for(resource, as: resource_name, url: password_path(resource_name), method: :put, html: {class: "form-user-session"}) do |f|
              = f.hidden_field :reset_password_token
              = f.password_field :password, placeholder: t('views.devise.passwords.edit.new_password'), autofocus: true, autocomplete: "off", class: "form-control"
              = f.password_field :password_confirmation, placeholder: t('views.devise.passwords.edit.repeat_password'), autocomplete: "off", class: "form-control"

              = f.button :submit, value: t('views.devise.passwords.edit.reset_password'), class: "btn btn-lg btn-outline-primary btn-block" 
            #tabs
    .col-sm-3.col-md-4.col-md-offset-4
