= devise_error_messages!
.title
  %h2= t('views.devise.passwords.new.title')
    
.container
  .row
    .col-sm-3.col-md-4.col-md-offset-4
    .col-sm-6.col-md-4.col-md-offset-4
      .account-wall
        #my-tab-content.tab-content
          #login.tab-pane.active
            %img.profile-img{:alt => "", :src => "https://lh5.googleusercontent.com/-b0lyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"}/
            %p= t('views.devise.passwords.new.description')
            = simple_form_for(resource, as: resource_name, url: password_path(resource_name), method: :post, html: {class: "form-user-session"}) do |f|
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('views.devise.passwords.new.email_placeholder'), class: "form-control"
              = f.button :submit, value: t('views.devise.passwords.new.send_email_button'), class: "btn btn-lg btn-outline-primary btn-block"   
    .col-sm-6.col-md-4.col-md-offset-4